# Alias box scripts and refresh compiled scripts behind alias automatically
_box_update_and_run ()
{
  test $b.shc -nt $b.sh || {
    make_echo=1 $b.sh > $b.shc
    test -x $b.shc || chmod +x $b.shc
    $LOG "note" "" "Updated box script, regenerated" "$b.shc"
  }
  $b.shc "$@"
}

alias htd=htd.sh

alias ht="b=$HOME/bin/ht _box_update_and_run"
alias statusdir="b=$HOME/bin/statusdir _box_update_and_run"
test "$(type -t sd)" || alias sd=statusdir # otherwise gives trouble with compo:sd.inc
#alias vc=vc.sh TODO: rename scm
alias vc="b=$HOME/bin/vc _box_update_and_run"
alias box="b=$HOME/bin/box _box_update_and_run"
alias docker-sh="b=$HOME/bin/docker-sh _docker-sh_update_and_run"
alias dckr=docker-sh
alias ino="b=$HOME/bin/ino _box_update_and_run"
alias meta-sh="b=$HOME/bin/meta-sh _box_update_and_run"

