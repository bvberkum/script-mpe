  done
}


c_save_url()
{
  annex=/Volumes/Simza/Downloads
  test "$(pwd -P)" = $annex || cd $annex

  test -n "$1" || error 'URL expected' 1
  test -n "$2" || {
    parseuri.py "$1"
    error "TODO: get filename"
  }
  test ! -e "$2" || error "File already exists: $2" 1
  git annex addurl "$1" --file "$2"
}

c_save_ref()
{
  test -n "$1" || error "tags expected" 1
  tags="$1"
  
  shift 1
  for ref in "$@"
  do
    echo $ref
  done
}

