# List root IDs
c_list_local_ns()
{
  fixed_table_hd $ns_tab ID PATH CMD | while read vars
  do
    eval local "$vars"
    echo $ID
  done
}

# XXX: List matching tags
c_spc_ns_names='[<path>|<localname> [<ns>]]'
c_ns_names()
{
  test -z "$3" || error "Surplus arguments: $3" 1
  fixed_table_hd $ns_tab ID CMD_PATH CMD | while read vars
  do
    eval local "$vars"
    test -n "$2" && {
      echo 2=$2
      test "$2" = "$ID" || continue
    }
    cd $CMD_PATH
    note "In '$ID' ($CMD_PATH)"
    eval $CMD "$1"
    cd $cwd
  done
}

